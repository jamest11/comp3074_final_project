{
    "extends": [
        "plugin:react-hooks/recommended",
        "universe/native"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react-hooks"
    ],
    "rules": {
        "prettier/prettier": 0,
        "react/react-in-jsx-scope": 0,
        "import/order": 0,
        "semi": 1,
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn"
    },
    "settings": {
        "import/ignore": ["react-native"]
    }
}
